rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserId() {
      return request.auth.uid;
    }

    function isMember(campaignData) {
      return getUserId() in campaignData.members;
    }

    function isDM(campaignData) {
      return campaignData.dmId == getUserId();
    }

    function isSuperAdmin() {
      return getUserId() == 'DnZPlvutotbHwsalwMsBG7kEWCu1';
    }

    // Shared campaigns collection
    match /campaigns/{campaignId} {
      // Read: public campaigns OR member/DM/creator OR superadmin
      allow read: if isAuthenticated() && (
        resource.data.isPublic == true ||
        isMember(resource.data) ||
        isDM(resource.data) ||
        getUserId() == resource.data.createdBy ||
        isSuperAdmin()
      );

      // Create: anyone authenticated
      allow create: if isAuthenticated();

      // Update: DM/creator can update anything, or users can update joinRequests on public campaigns
      allow update: if isAuthenticated() && (
        isDM(resource.data) ||
        getUserId() == resource.data.createdBy ||
        (resource.data.isPublic == true &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['joinRequests', 'updatedAt']))
      );

      // Delete: only DM or creator
      allow delete: if isAuthenticated() && (
        isDM(resource.data) ||
        getUserId() == resource.data.createdBy
      );

      // Characters
      match /characters/{characterId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow create: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow update: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow delete: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Lore
      match /lore/{loreId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Sessions
      match /sessions/{sessionId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // NPCs
      match /npcs/{npcId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Timeline Events
      match /timelineEvents/{eventId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Locations
      match /locations/{locationId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Encounters
      match /encounters/{encounterId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Notes
      match /notes/{noteId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Campaign Frame
      match /campaignFrame/{frameId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Campaign Frame Draft
      match /campaignFrameDraft/{draftId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Maps
      match /maps/{mapId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Files
      match /files/{fileId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Conversations (messaging)
      match /conversations/{conversationId} {
        allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
        allow create: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow update: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow delete: if isAuthenticated() && isDM(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);

        // Messages subcollection
        match /messages/{messageId} {
          allow read: if isAuthenticated() && (isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data) || isSuperAdmin());
          allow create: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
          allow update: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
          allow delete: if isAuthenticated() && isDM(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        }
      }
    }
  }
}
