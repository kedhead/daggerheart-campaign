rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserId() {
      return request.auth.uid;
    }

    function isMember(campaignData) {
      return getUserId() in campaignData.members;
    }

    function isDM(campaignData) {
      return campaignData.dmId == getUserId();
    }

    // Shared campaigns collection
    match /campaigns/{campaignId} {
      // Anyone can read campaigns they're invited to or members of
      allow read: if isAuthenticated() && (
        isMember(resource.data) ||
        request.auth.token.email.lower() in resource.data.pendingInvites
      );

      // Anyone can create a campaign
      allow create: if isAuthenticated();

      // Members can update (to join), DM has full control
      allow update: if isAuthenticated() && (
        isMember(resource.data) ||
        request.auth.token.email.lower() in resource.data.pendingInvites
      );

      // Only DM can delete
      allow delete: if isAuthenticated() && isDM(resource.data);

      // Characters
      match /characters/{characterId} {
        allow read: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow create: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow update: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow delete: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Lore
      match /lore/{loreId} {
        allow read: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }

      // Sessions
      match /sessions/{sessionId} {
        allow read: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
        allow write: if isAuthenticated() && isMember(get(/databases/$(database)/documents/campaigns/$(campaignId)).data);
      }
    }
  }
}
